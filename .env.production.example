# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Application
NEXT_PUBLIC_APP_URL=https://app.indigenious.ca
NODE_ENV=production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Stripe Configuration (Production Keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Stripe Price IDs (Production)
STRIPE_PRICE_PARTNER_MONTHLY=price_live_partner_monthly_id
STRIPE_PRICE_PARTNER_YEARLY=price_live_partner_yearly_id
STRIPE_PRICE_GROWTH_MONTHLY=price_live_growth_monthly_id
STRIPE_PRICE_GROWTH_YEARLY=price_live_growth_yearly_id
STRIPE_PRICE_CORPORATE_MONTHLY=price_live_corporate_monthly_id
STRIPE_PRICE_CORPORATE_YEARLY=price_live_corporate_yearly_id

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=noreply@indigenious.ca
SMTP_REPLY_TO=support@indigenious.ca

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=XXXXXXX
NEXT_PUBLIC_CLARITY_ID=XXXXXXXXXX

# Security
NEXTAUTH_SECRET=your-production-secret-key-min-32-chars
NEXTAUTH_URL=https://app.indigenious.ca

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=indigenious
SENTRY_PROJECT=indigenious-app
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Rate Limiting
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# CDN and Assets
NEXT_PUBLIC_CDN_URL=https://cdn.indigenious.ca

# API Keys for Integrations
INTERAC_API_KEY=your-interac-api-key
INTERAC_API_SECRET=your-interac-api-secret
CANADA_POST_API_KEY=your-canada-post-api-key

# Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id